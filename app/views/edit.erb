<h1>Update Recipe</h1>

<form action="/recipes/<%= @recipe.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">

<label for="name">Name</label>
  <input type="text" id="name" name="recipe[name]" value="<%= @recipe.name %>">

<label for="ingredients">Ingredients</label>
  <input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>">
  
<label for="cook_time">Cook Time</label> 
  <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>">
  <input type="submit" id="submit">
</form>